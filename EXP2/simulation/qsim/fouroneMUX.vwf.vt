// assign statements (if any)                          
fouroneMUX i1 (
// port map - connection between master ports and signals/registers   
	.I(I),
	.S(S),
	.Y(Y)
);
// I[ 3 ]
initial
begin
	I[3] = 1'b0;
end 
// I[ 2 ]
initial
begin
	I[2] = 1'b0;
end 
// I[ 1 ]
initial
begin
	I[1] = 1'b0;
end 
// I[ 0 ]
initial
begin
	I[0] = 1'b0;
end 
// S[ 1 ]
initial
begin
	S[1] = 1'b0;
	S[1] = #20000 1'b1;
end 
// S[ 0 ]
initial
begin
	S[0] = 1'b0;
	S[0] = #10000 1'b1;
	S[0] = #10000 1'b0;
	S[0] = #10000 1'b1;
end 

fouroneMUX_vlg_sample_tst tb_sample (
	.I(I),
	.S(S),
	.sampler_tx(sampler)
);

fouroneMUX_vlg_check_tst tb_out(
	.Y(Y),
	.sampler_rx(sampler)
);
endmodule

